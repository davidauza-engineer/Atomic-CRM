<% provide :title, 'Home' %>
<%= render 'layouts/notifications' %>
<div class="home-container d-flex flex-column">
  <div class="logo-container d-flex align-items-center justify-content-center">
    <%= image_tag 'atomic_crm_logo.png', class: 'home-logo'%>
  </div>
  <button class="home-button atomic-purple d-flex mx-auto justify-content-center title">
    <%= link_to 'Log In'.upcase, login_path %>
  </button>
  <button class="home-button home-sign-up-button d-flex mx-auto justify-content-center title">
    <%= link_to 'Sign Up'.upcase, signup_path, class: 'gray-link' %>
  </button>
</div>
